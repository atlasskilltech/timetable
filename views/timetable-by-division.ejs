<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ATLAS Timetable - By Division</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="layout">
    <%- include('partials/sidebar', { active: 'by-division' }) %>
    
    <div class="main-content">
      <div class="page-header">
        <div class="header-top">
          <div>
            <h1 class="page-title">Timetable by Division</h1>
            <p class="page-subtitle">View class schedules organized by divisions</p>
          </div>
        </div>
      </div>

      <div class="filters-container">
        <div class="filter-grid" style="grid-template-columns: repeat(2, 1fr);">
          <div class="filter-item">
            <label>ðŸ“… DATE</label>
            <input type="date" id="dateFilter" class="filter-input">
          </div>
          
          <div class="filter-item">
            <label>ðŸŽ“ PROGRAM</label>
            <select id="programFilter" class="filter-select">
              <option value="all">All Programs</option>
            </select>
          </div>
        </div>
      </div>

      <div id="divisionsContainer" class="timetable-cards">
        <!-- Division cards will be loaded here -->
      </div>

      <div id="loadingState" class="loading-state" style="display: none;">
        <div class="spinner"></div>
        <p>Loading divisions...</p>
      </div>

      <div id="emptyState" class="empty-state" style="display: none;">
        <div class="empty-icon">ðŸ“š</div>
        <h3>No divisions found</h3>
        <p>Try adjusting your filters</p>
      </div>
    </div>
  </div>

  <script src="/js/by-division.js"></script>
</body>
</html>
