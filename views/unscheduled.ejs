<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ATLAS Timetable - Unscheduled</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="layout">
    <%- include('partials/sidebar', { active: 'unscheduled' }) %>
    
    <div class="main-content">
      <div class="page-header">
        <div class="header-top">
          <div>
            <h1 class="page-title">Unscheduled Items</h1>
            <p class="page-subtitle">Classes, faculty, and rooms without schedules</p>
          </div>
          <div class="header-stats">
            <div class="header-stat-item">
              <span class="stat-number" id="totalUnscheduled">0</span>
              <span class="stat-label">TOTAL UNSCHEDULED</span>
            </div>
          </div>
        </div>
      </div>

      <div class="filters-container">
        <div class="filter-grid" style="grid-template-columns: 1fr;">
          <div class="filter-item">
            <label>ðŸ“… DATE</label>
            <input type="date" id="dateFilter" class="filter-input">
          </div>
        </div>
      </div>

      <!-- Tabs -->
      <div class="tabs-container">
        <button class="tab-button active" data-tab="classes">
          Classes (<span id="classesCount">0</span>)
        </button>
        <button class="tab-button" data-tab="faculties">
          Faculties (<span id="facultiesCount">0</span>)
        </button>
        <button class="tab-button" data-tab="rooms">
          Rooms (<span id="roomsCount">0</span>)
        </button>
      </div>

      <!-- Tab Contents -->
      <div class="tab-content active" id="classesTab">
        <div id="classesContainer" class="unscheduled-list">
          <!-- Classes will be loaded here -->
        </div>
      </div>

      <div class="tab-content" id="facultiesTab">
        <div id="facultiesContainer" class="unscheduled-list">
          <!-- Faculties will be loaded here -->
        </div>
      </div>

      <div class="tab-content" id="roomsTab">
        <div id="roomsContainer" class="unscheduled-list">
          <!-- Rooms will be loaded here -->
        </div>
      </div>

      <div id="loadingState" class="loading-state" style="display: none;">
        <div class="spinner"></div>
        <p>Loading unscheduled items...</p>
      </div>

      <div id="emptyState" class="empty-state" style="display: none;">
        <div class="empty-icon">âœ…</div>
        <h3>Everything is scheduled!</h3>
        <p>No unscheduled items found for this date</p>
      </div>
    </div>
  </div>

  <script src="/js/unscheduled.js"></script>
</body>
</html>
