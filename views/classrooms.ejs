<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ATLAS Timetable - Classrooms</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="layout">
    <%- include('partials/sidebar', { active: 'classrooms' }) %>
    
    <div class="main-content">
      <div class="page-header">
        <div class="header-top">
          <div>
            <h1 class="page-title">Classrooms</h1>
            <p class="page-subtitle">Track classroom utilization and availability</p>
          </div>
        </div>
      </div>

      <div class="filters-container">
        <div class="filter-grid" style="grid-template-columns: repeat(3, 1fr);">
          <div class="filter-item">
            <label>ğŸ“… DATE</label>
            <input type="date" id="dateFilter" class="filter-input">
          </div>
          
          <div class="filter-item">
            <label>ğŸ¢ BUILDING</label>
            <select id="buildingFilter" class="filter-select">
              <option value="all">All Buildings</option>
            </select>
          </div>
          
          <div class="filter-item">
            <label>ğŸ“ FLOOR</label>
            <select id="floorFilter" class="filter-select">
              <option value="all">All Floors</option>
            </select>
          </div>
        </div>
      </div>

      <div id="classroomsContainer" class="timetable-cards">
        <!-- Classroom cards will be loaded here -->
      </div>

      <div id="loadingState" class="loading-state" style="display: none;">
        <div class="spinner"></div>
        <p>Loading classroom data...</p>
      </div>

      <div id="emptyState" class="empty-state" style="display: none;">
        <div class="empty-icon">ğŸ¢</div>
        <h3>No classrooms found</h3>
        <p>Try adjusting your filters</p>
      </div>
    </div>
  </div>

  <script src="/js/classrooms.js"></script>
</body>
</html>
